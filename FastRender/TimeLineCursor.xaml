<UserControl x:Class="FastRender.TimeLineCursor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FastRender"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Path VerticalAlignment="Bottom" HorizontalAlignment="Left" Fill="White" Data="M0,0 L10,0 L5,10 Z" Margin="0,5,0,0"/>
        <Rectangle HorizontalAlignment="Left" Height="180" Width="1" Margin="4.4,0,0,0" Fill="White" Cursor="AppStarting" Opacity="0.5"/>
    </StackPanel>
</UserControl>
